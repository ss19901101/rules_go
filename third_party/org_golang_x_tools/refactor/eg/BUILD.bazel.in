    name = "go_default_library",
    srcs = [
        "eg.go",
        "match.go",
        "rewrite.go",
    ],
    importpath = "golang.org/x/tools/refactor/eg",
    visibility = ["//visibility:public"],
    deps = ["//go/ast/astutil:go_default_library"],
